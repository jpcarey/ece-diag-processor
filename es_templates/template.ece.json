PUT _template/ece-diag
{
  "version": 10002,
  "order" : 1000,
  "aliases": {},
  "settings": {},
  "index_patterns": [
    "proxy-logs*",
    "elasticsearch-logs*",
    "kibana-logs-*",
    "services-logs-*"
  ],
  "settings": {
    "index.refresh_interval": "60s",
    "number_of_shards": 1,
    "number_of_replicas": 1
  },
  "mappings": {
    "doc": {
      "properties": {
        "@metadata": {
          "properties": {
            "offset": { "type": "long" },
            "diag_name": { "type": "keyword" },
            "file": {
              "type": "text",
              "fields": { "keyword": { "type": "keyword", "ignore_above": 256 }}
            }
          }
        },
        "ece": {
          "properties": {
            "runner": { "type": "keyword" },
            "type": { "type": "keyword" },
            "component": { "type": "keyword" },
            "cluster_id": { "type": "keyword" },
            "container": { "type": "keyword" }
          }
        }
      }
    }
  }
}
